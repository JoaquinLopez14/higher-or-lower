{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", // o "ESNext" si prefieres, pero CommonJS es más estándar para Node
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}